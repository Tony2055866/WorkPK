<set xmlns:android="http://schemas.android.com/apk/res/android">
	<alpha android:interpolator="@android:anim/accelerate_interpolator"
	    android:fillBefore="true"
		android:fromAlpha="0.3" android:toAlpha="0.7" android:duration="900" />
	<translate android:fromYDelta="50" android:toYDelta="0"  android:duration="500" />
	<scale android:interpolator="@android:anim/accelerate_interpolator"
		android:fromXScale="0.5" android:toXScale="0.8" android:fromYScale="0.5"
		android:toYScale="0.8"  android:pivotX="50%"
		android:duration="500" />
</set>