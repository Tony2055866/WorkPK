<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout01"
    android:layout_width="300dp"
    android:layout_height="fill_parent"
    android:background="#e0e8f0f0"
    android:orientation="vertical" >

    <CheckBox
        android:id="@+id/isbgSoundCb2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:button="@null"
        android:checked="true"
        android:drawableLeft="@drawable/checkbox_bg"
        android:paddingLeft="5dp"
        android:paddingTop="4dp"
        android:text="背景音乐"
        android:textColor="#000000"
        android:textSize="18sp" />

    <CheckBox
        android:id="@+id/isSoundCba2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:button="@null"
        android:checked="true"
        android:drawableLeft="@drawable/checkbox_bg"
        android:paddingLeft="5dp"
        android:paddingTop="10dp"
        android:text="游戏音效"
        android:textColor="#000000"
        android:textSize="18sp" />

    

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/okbtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="24dp"
            android:layout_weight="1"
            android:background="@drawable/register_button_select"
            
            android:paddingBottom="14dp"
            android:paddingTop="14dp"
            android:text="保存"
            android:textSize="19sp" />

        <Button
            android:id="@+id/cancelbtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="24dp"
            android:layout_weight="1"
            android:background="@drawable/register_button_select"
            
            android:paddingBottom="14dp"
            android:paddingTop="14dp"
            android:text="取消"
            android:textSize="19sp" />
    </LinearLayout>

</LinearLayout>